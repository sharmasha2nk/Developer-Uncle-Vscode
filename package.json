{
	"name": "dev-uncle",
	"displayName": "Developer Uncle",
	"description": "Developer Uncle to help you in some non-trivial tasks",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.unescapeJson",
		"onCommand:extension.escapeJson",
		"onCommand:extension.time",
		"onCommand:extension.uuid4",
		"onCommand:extension.formatJson"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.unescapeJson",
				"title": "JSON Unescape",
				"category": "DevUncle"
			},
			{
				"command": "extension.escapeJson",
				"title": "JSON Escape",
				"category": "DevUncle"
			},
			{
				"command": "extension.formatJson",
				"title": "Format JSON",
				"category": "DevUncle"
			},
			{
				"command": "extension.time",
				"title": "Current Time",
				"category": "DevUncle"
			},
			{
				"command": "extension.uuid4",
				"title": "Generate random UUID",
				"category": "DevUncle"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"uuid": "^3.4.0"
	}
}
